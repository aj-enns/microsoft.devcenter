# Packer variables file for VS Code DevBox Image
# Copy this to vscode-variables.pkrvars.hcl and customize with your values

# Azure authentication (using Azure CLI)
subscription_id = "00000000-0000-0000-0000-000000000000"
tenant_id      = "00000000-0000-0000-0000-000000000000"

# Azure resources
resource_group_name    = "rg-devbox-your-resource-group"
gallery_name          = "your-gallery-name"
image_definition_name = "VSCodeImage"
location             = "eastus"

# Image configuration
image_version = "1.0.0"  # Increment this for new versions
vm_size      = "Standard_D2s_v3"

# Base image (Windows 11 Enterprise with Microsoft 365)
image_publisher = "MicrosoftWindowsDesktop"
image_offer    = "windows-ent-cpc"
image_sku      = "win11-24h2-ent-cpc-m365"